@model CosmeticsShop.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "List of Products";

}
<div class="page">

<h1 class="text-center pt-3">@ViewBag.Title</h1>


  <div class="product-list">
         
            @foreach (Product p in @Model.Products)
            {
               <a asp-controller="Product" asp-action="Details" asp-route-id="@p.ProductId"
                   class="list-group-item text-center">@p.Name</a>
            }
   </div>
</div>
